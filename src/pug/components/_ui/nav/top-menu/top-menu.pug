include ../../cards/product-card/product-card

mixin top-menu(data)
  .top-menu 
    +main-btn({
      tag: 'a',
      href: "#",
      title: data.title,
      cls: 'btn-thin'
    })

    .top-menu__grid
      .top-menu__grid-item
        p menu
      .top-menu__grid-item.top-menu__grid-item--side
        .catalog-preview
          +product-card({
            images: [
              'product-card-mock-1',
              'product-card-mock-2',
              'product-card-mock-3',
              'product-card-mock-4',
            ],
            badge: {
              cls: 'badge-accent',
              text: '-25%'
            },
            title: 'Брюки спортивные летние с двумя карманами',
            price: '9999 ₽',
            oldPrice: '19990 ₽'
          })
          +product-card({
            images: [
              'product-card-mock-2',
              'product-card-mock-3',
              'product-card-mock-4',
              'product-card-mock-1',
            ],
            badge: {
              text: 'Новинка'
            },
            title: 'Брюки спортивные',
            price: '99999 ₽'
          })
          +product-card({
            images: [
              'product-card-mock-3',
              'product-card-mock-4',
              'product-card-mock-1',
              'product-card-mock-2',
            ],
            badge: {
              text: 'Хит'
            },
            title: 'Брюки спортивные',
            price: '99999 ₽'
          })

    

